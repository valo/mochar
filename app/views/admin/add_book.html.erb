<h1>Add book</h1>
<%= error_messages_for :book %>
<% form_for :book, :url => { :action => :do_add_book } do |f| -%>
  <%= render :partial => 'book_form', :locals => { :f => f } %>
  <p>
    <%= f.submit "Add", :disable_with => 'Adding...' %>
  </p>
<% end -%>

<%= link_to "Back to books", :action => "books" %>