<h1>Edit user</h1>
<%= error_messages_for :user %>
<% form_for :user, :url => { :action => :do_edit_user, :id => @user.id }, :html => {:class => 'user_form'} do |f| -%>
  <%= render :partial => 'user_form', :locals => { :f => f } %>
  <%= f.submit "Edit", :disable_with => 'Editing...' %>
<% end -%>
<%= link_to "Back to users", :action => :users %>
